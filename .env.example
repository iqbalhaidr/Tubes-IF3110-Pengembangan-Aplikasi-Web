# ============ DATABASE CONFIGURATION ============
DB_HOST=db
DB_PORT=5432
DB_NAME=nimonspedia_db
DB_USER=nimonspedia_user
DB_PASSWORD=your_strong_password_here

# ============ APPLICATION CONFIGURATION ============
APP_ENV=development
APP_URL=http://localhost:8080

# ============ SESSION CONFIGURATION ============
SESSION_LIFETIME=86400
SESSION_NAME=NIMONSPEDIA_SESSION

# ============ SECURITY ============
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# ============ PGADMIN CONFIGURATION ============
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=changeme

# ============ NODE.JS CONFIGURATION ============
NODE_ENV=development
NODE_PORT=3000
NODE_URL=http://localhost:3000

# ============ JWT CONFIGURATION (Admin Authentication) ============
# Generate using: require('crypto').randomBytes(32).toString('hex')
JWT_SECRET=your_jwt_secret_key_here_change_in_production_12345678
JWT_EXPIRE=3600

# ============ WEB PUSH NOTIFICATION CONFIGURATION ============
# Generate using: npx web-push generate-vapid-keys
# For local testing, use the values below (replace with your own in production)
VAPID_PUBLIC_KEY=BKxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
VAPID_PRIVATE_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============ REDIS CONFIGURATION (Optional) ============
REDIS_HOST=redis
REDIS_PORT=6379

# ============ CORS CONFIGURATION ============
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:80