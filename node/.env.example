# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=nimonspedia_db
DB_USER=nimonspedia_user
DB_PASSWORD=your_strong_password_here

# Node.js Server Configuration
NODE_ENV=development
NODE_PORT=3000
NODE_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRE=3600

# WebSocket Configuration
WEBSOCKET_PORT=3000
WEBSOCKET_PATH=/socket.io

# Push Notification Configuration (Web Push)
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# PHP Session Configuration (for WebSocket authentication)
SESSION_NAME=NIMONSPEDIA_SESSION

# Redis Configuration (optional, for session sharing)
REDIS_HOST=redis
REDIS_PORT=6379

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost
